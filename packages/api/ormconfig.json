[
  {
    "name": "development",
    "type": "postgres",
    "host": "localhost",
    "port": 5432,
    "database": "fancystackdb",
    "synchronize": true,
    "logging": true,
    "entities": ["src/modules/**/*.entity.ts"],
    "migrations": ["src/db/migrations/*.ts"],
    "cli": { "migrationsDir": "src/db/migrations" }
  },
  {
    "name": "production",
    "type": "postgres",
    "synchronize": false,
    "logging": true,
    "entities": [
      "packages/api/dist/modules/**/*.entity.js",
      "modules/**/*.entity.js"
    ],
    "migrations": [
      "packages/api/dist/db/migrations/*.js",
      "db/migrations/*.js"
    ],
    "cli": { "migrationsDir": "src/db/migrations" }
  }
]
